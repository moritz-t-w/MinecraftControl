{
	"compilerOptions": {

		/* Language and Environment */
		"target": "es2016",

		/* Modules */
		"module": "CommonJS",

		/* Emit */
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "build/",

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Type Checking */
		"strict": true,

		/* Completeness */
		"skipLibCheck": true
	}
}